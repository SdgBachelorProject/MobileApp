        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heatingConsumptionPanel" />

