        app:consumptionTitleText="Heating"
        app:consumptionValueText="54 kW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/electricityConsumptionPanel" />

    <com.example.sdgbachelorproject.view.widget.ConsumptionView
        android:id="@+id/waterConsumptionPanel"
        android:layout_width="match_parent"
